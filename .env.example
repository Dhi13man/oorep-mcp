# OOREP MCP Server Configuration
# Copy this file to .env and customize as needed

# OOREP API base URL
OOREP_MCP_BASE_URL=https://www.oorep.com

# Request timeout in milliseconds (1000-300000)
OOREP_MCP_TIMEOUT_MS=30000

# Cache TTL in milliseconds (0-3600000, 0 to disable)
OOREP_MCP_CACHE_TTL_MS=300000

# Maximum results cap (1-500)
OOREP_MCP_MAX_RESULTS=100

# Log level: debug | info | warn | error
OOREP_MCP_LOG_LEVEL=info

# Default repertory abbreviation
OOREP_MCP_DEFAULT_REPERTORY=publicum

# Default materia medica abbreviation
OOREP_MCP_DEFAULT_MATERIA_MEDICA=boericke
